@model CreatureOfCode.Web.Models.PostModel
@{
    ViewBag.Title = "Create";
}

<div class="container">
    <h2>Create a post</h2>
    <div class="row">
        <div class="col-md-6">
            <div id="fields">
                @using (Html.BeginForm("Create", "Blog", null, FormMethod.Post, new { id = "ajax-contact-form" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        @Html.TextBoxFor(x => x.Title, new { placeholder = "Title", @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.TextBoxFor(x => x.Category, new { placeholder = "Category", @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.TextAreaFor(x => x.Content, new { placeholder = "Content", @class = "form-control" })
                    </div>

                    <input type="submit" value="Create" class="btn push" />
                }
            </div>
        
        </div>
        <div class="col-md-6">&nbsp;</div>
    </div>
        
</div>
